{

  "description": "TikTok Analyzer",
  "manifest_version": 2,
  "name": "tiktok-addon",
  "version": "1.0",
  "icons": {
    "48": "pen.svg"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "*://*.tiktok.com/*", "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/@*"],
      "js": ["scroll.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
