{

  "description": "TikTok Analytics",
  "manifest_version": 2,
  "name": "tiktok-analytics-ext",
  "version": "1.0",
  "icons": {
    "60": "icons/button-60.png",
    "40": "icons/button-40.png"
  },

  "browser_action":{
    "default_icon": "icons/button-40.png",
    "default_title": "TikTok Analytics",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "*://*.tiktok.com/*", "tabs", "downloads"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/@*"],
      "js": ["scroll.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
